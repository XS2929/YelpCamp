<%- include("../partials/header") %>
<div class="container">
	<div class="row justify-content-center" >
		<div class="col-md-12 text-center my-5">
			<h1>Edit Comment</h1>
		</div>
			
		<div class="col-xs-12 col-md-6">
			
			<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<textarea rows="5" class="form-control" name="comment[text]" maxlength="280" required><%= comment.text %></textarea>
					<small>Length limit: 280 characters</small>
				</div>
				<!-- <div class="form-group">
					<input class="form-control" type="text" name="comment[author]" placeholder="author">
				</div> -->
				
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-primary btn-block">Submit</button>
				</div>			
				
			</form>

			<a href="/campgrounds">Back</a>
		<div>	
	</div>
</div>
<%-	include("../partials/footer") %>