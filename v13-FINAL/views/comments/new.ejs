<%- include("../partials/header") %>
<div class="container">
	<div class="row justify-content-center" >
		<div class="col-md-12 text-center mb-4">
			<h1>Add New Comment to <%= campground.name %></h1>
		</div>
		<div class="my-4 col-xs-12 col-md-6">
			
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
				<div class="form-group">
					<textarea rows="5" class="form-control" name="comment[text]" maxlength="280" placeholder="New Comment" required></textarea>
					<small>Length limit: 280 characters</small>
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-primary btn-block">Submit</button>
				</div>			
				
			</form>

			<a href="/campgrounds">Back</a>
		<div>	
	</div>
</div>
