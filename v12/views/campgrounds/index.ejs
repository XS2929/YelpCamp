<%- include("../partials/header") %>

<div class="container">
	
	<header class="jumbotron">
		
		<div class="container">

			<h1><span><i class="fab fa-free-code-camp"></i></span> Welcome to YelpCamp!</h1>
			<p>This is YelpCamp v10</p>
			<p>
				<a href="/campgrounds/new"><button class="btn btn-lg btn-primary">Add new Campground</button></a>
			</p>
					
		</div>
		
	</header>
  
	<div class="row">
		<div class="col-lg-12">
			<h3>Our Most Popular Sites</h3>
		</div>
	</div>
	
	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		
		<% campgrounds.forEach(function(campground){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= campground["image"] %>">
					
					<div class="caption" >
						<h4><strong><%= campground["name"] %></strong></h4>
					</div>
					<p>
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More  <span><i class="fas fa-info-circle"></i></span></a>
					</p>
				</div>
				
			</div>
		<% }) %>
	</div>

</div>
<%- include("../partials/footer") %>
