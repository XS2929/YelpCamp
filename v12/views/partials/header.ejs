<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
		<link rel="stylesheet" href="/stylesheets/main.css">
		<script src="https://kit.fontawesome.com/1d0db06eea.js" crossorigin="anonymous"></script>
	</head>

	<body>	
	
	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<div class="navbar-header">
				
				<a class="navbar-brand" href="/"><span><i class="fas fa-mountain"></i></span>YelpCamp</a>
			</div>
			<div class="collapse navbar-collapse">
				<ul class="nav navbar-nav navbar-right">
					
					<% if(!currentUser){ %>
					<li><a href="/login"><strong><span><i class="fas fa-sign-in-alt"></i></span> Login</strong></a></li>
					<li><a href="/register"><strong><span><i class="fas fa-user-plus"></i></span> Sign Up</strong></a></li>
					<% } else { %>
					<li><a><strong><span><i class="fas fa-user"></i></span> <%= currentUser.username %></strong></a></li>
					<li><a href="/logout"><strong><span><i class="fas fa-sign-out-alt"></i></span> Logout</strong></a></li>
					<% } %>
					<li><a href="/about"><strong><span><i class="fas fa-question-circle"></i></span> About</strong></a></li>
				</ul>
			</div>			
		</div>				
	</nav>
	<div class="container">
		<% if(error && error.length > 0 ){ %>
			<div class="alert alert-danger" role="alert">
				<%= error %>
			</div>
		<% } %>
		<% if(success && success.length > 0 ){ %>
			<div class="alert alert-success" role="alert">
				<%= success %>
			</div>
		<% } %>
	</div>
	
	